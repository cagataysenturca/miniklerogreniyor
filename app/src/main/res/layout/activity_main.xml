<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asl.miniklerogreniyor.MainActivity">


    <Button
        android:id="@+id/sayibtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/meyvebtn"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/meyvebtn"
        android:layout_marginTop="59dp"
        android:background="@color/colorAccent"
        android:backgroundTint="@color/colorAccent" />

    <Button
        android:id="@+id/meyvebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="45dp"
        android:text="MEYVELER"
        android:layout_below="@+id/sekilbtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/hayvanbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="HAYVANLAR"
        android:layout_below="@+id/meyvebtn"
        android:layout_alignLeft="@+id/meyvebtn"
        android:layout_alignStart="@+id/meyvebtn" />

    <Button
        android:id="@+id/sekilbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sayibtn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:text="SEKİLLER" />

    <Button
        android:id="@+id/renkbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hayvanbtn"
        android:layout_alignLeft="@+id/sekilbtn"
        android:layout_alignStart="@+id/sekilbtn"
        android:text="RENKLER" />

    <Button
        android:id="@+id/nesnebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:text="NESNELER"
        android:layout_alignBaseline="@+id/hayvanbtn"
        android:layout_alignBottom="@+id/hayvanbtn"
        android:layout_alignLeft="@+id/renkbtn"
        android:layout_alignStart="@+id/renkbtn" />

    <Button
        android:id="@+id/yiyecekbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hayvanbtn"
        android:layout_alignStart="@+id/hayvanbtn"
        android:layout_below="@+id/nesnebtn"
        android:layout_marginTop="54dp"
        android:text="YİYYECEKLER" />

    <Button
        android:id="@+id/içecekbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/yiyecekbtn"
        android:layout_alignLeft="@+id/nesnebtn"
        android:layout_alignStart="@+id/nesnebtn"
        android:layout_marginBottom="12dp"
        android:text="İÇECEKLER" />
</RelativeLayout>
